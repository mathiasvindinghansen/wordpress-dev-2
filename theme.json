{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,

    "settings": {
        "dimensions": {
            "minHeight": true
        },

        "color": {
            "gradients": [
                {
                    "slug": "mvh-accent-2-to-contrast",
                    "gradient": "linear-gradient(135deg, var(--wp--preset--color--mvh-accent-2), var(--wp--preset--color--mvh-contrast))",
	                "name": "Accent Two to Contrast"
                }
            ],

            "palette": [
                {
                    "slug": "mvh-base",
                    "color": "#111",
                    "name": "Base"
                },

				{
					"slug": "mvh-contrast",
					"color": "#fefefe",
					"name": "Contrast"
				},

				{
					"slug": "mvh-accent-1",
					"color": "#383838",
					"name": "Accent One"
				},

				{
					"slug": "mvh-accent-2",
					"color": "#00838f",
					"name": "Accent Two"
				},

				{
					"slug": "mvh-accent-3",
					"color": "#4fb3bf",
					"name": "Accent Three"
				}
            ]
        },

        "typography": {
            "lineHeight": true,

            "fontFamilies": [
                {
                    "fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif",
                    "slug": "mvh-system-fonts",
                    "name": "System Fonts"
                },

                {
                    "fontFamily": "Geneva, Tahoma, Verdana, sans-serif",
                    "slug": "mvh-geneva-verdana",
                    "name": "Geneva Verdana"
                },
                
                {
                    "fontFamily": "Cambria, Georgia, serif",
                    "slug": "mvh-cambria-georgia",
                    "name": "Cambria Georgia"
                }
            ],

            "fontSizes": [
                {
                    "slug": "mvh-extra-small",
                    "size": "1rem",
                    "name": "Extra small"
                },

                {
                    "slug": "mvh-small",
                    "size": "1.125rem",
                    "name": "Small"
                },

                {
                    "slug": "mvh-medium",
                    "size": "1.25rem",
                    "name": "Medium"
                },

                {
                    "slug": "mvh-large",
                    "size": "1.5rem",
                    "name": "Large"
                },

                {
                    "slug": "mvh-extra-large",
                    "size": "2.5rem",
                    "name": "Extra large"
                }
            ]
        },

        "spacing": {
            "padding": true,
            "margin": true,
            "units": ["px", "em", "rem", "vh", "vw", "%"]
        },

        "layout": {
            "contentSize": "840px",
            "wideSize": "1100px"
        }
    },
    
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--mvh-base)",
            "text": "var(--wp--preset--color--mvh-contrast)"
        },

        "elements": {
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--mvh-accent-2)"
                }
            }
        },

        "typography": {
            "fontSize": "var(--wp--preset--font-size--mvh-medium)",
            "fontFamily": "var(--wp--preset--font-family--mvh-system-fonts)",
            "lineHeight": "1.7"
        }
    },

    "templateParts": [
        {
            "name": "header",
            "area": "header",
            "title": "Header"
        },

        {
            "name": "footer",
            "area": "footer",
            "title": "Footer"
        }
    ]
}